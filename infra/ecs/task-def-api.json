{
  "family": "cashsouk-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/cashsoukApiTaskRole",
  "containerDefinitions": [
    {
      "name": "api",
      "image": "ACCOUNT_ID.dkr.ecr.ap-southeast-5.amazonaws.com/cashsouk-api:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "AWS_REGION",
          "value": "ap-southeast-5"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-5:ACCOUNT_ID:secret:/cashsouk/prod/database-url"
        },
        {
          "name": "RDS_PROXY_ENDPOINT",
          "valueFrom": "/cashsouk/prod/rds-proxy-endpoint"
        },
        {
          "name": "S3_BUCKET",
          "valueFrom": "/cashsouk/prod/s3/bucket-name"
        },
        {
          "name": "S3_PREFIX",
          "valueFrom": "/cashsouk/prod/s3/prefix"
        },
        {
          "name": "COGNITO_USER_POOL_ID",
          "valueFrom": "/cashsouk/prod/cognito/user-pool-id"
        },
        {
          "name": "COGNITO_APP_CLIENT_ID",
          "valueFrom": "/cashsouk/prod/cognito/client-id"
        },
        {
          "name": "JWT_ISSUER",
          "valueFrom": "/cashsouk/prod/cognito/issuer"
        },
        {
          "name": "ALLOWED_ORIGINS",
          "valueFrom": "/cashsouk/prod/cors/allowed-origins"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cashsouk-api",
          "awslogs-region": "ap-southeast-5",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "node -e \"require('http').get('http://localhost:3000/healthz', (r) => process.exit(r.statusCode === 200 ? 0 : 1))\""],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

